# ReadMaker Docker Environment Variables Template
# Copy this file to .env.docker for Docker containers

# PostgreSQL Database (Docker internal networking)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=readmaker
POSTGRES_USER=readmaker_user
POSTGRES_PASSWORD=readmaker
DATABASE_URL=postgresql://readmaker_user:readmaker@postgres:5432/readmaker

# pgAdmin4
PGADMIN_EMAIL=admin@readmaker.com
PGADMIN_PASSWORD=readmaker
PGADMIN_URL=http://localhost:8080

# Redis (Docker internal networking)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# JWT Settings
JWT_SECRET=your_256_bit_secret_key_generate_with_openssl_rand_hex_32
JWT_EXPIRES_IN=3600

# Application Settings
APP_ENV=development
LOG_LEVEL=debug