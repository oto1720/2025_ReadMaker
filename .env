# ReadMaker Docker Environment Variables

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=readmaker
POSTGRES_USER=readmaker_user
POSTGRES_PASSWORD=readmaker
DATABASE_URL=postgresql://readmaker_user:readmaker_password@localhost:5432/readmaker

# pgAdmin4
PGADMIN_EMAIL=admin@readmaker.com
PGADMIN_PASSWORD=readmaker
PGADMIN_URL=http://localhost:8080

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT Settings (for future Rust backend)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=3600

# Application Settings
APP_ENV=development
LOG_LEVEL=debug